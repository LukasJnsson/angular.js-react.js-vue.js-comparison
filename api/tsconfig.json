{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES6",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "dist",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "types": ["node"]
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*", "test/**/*", "server.ts", "environment.d.ts"]
}